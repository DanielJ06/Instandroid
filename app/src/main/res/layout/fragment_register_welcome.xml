<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".register.presentation.RegisterWelcomeFragment"
    tools:showIn="@layout/activity_register">

    <TextView
        style="@style/InstaFormTextViewBase"
        android:layout_gravity="center"
        android:text="@string/welcome_to_instagram" />

    <com.danieljrodrigues.instagramclone.common.view.LoadingButton
        android:id="@+id/register_button_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:text="@string/next" />

</LinearLayout>